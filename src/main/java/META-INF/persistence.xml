<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="care">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.care.Person</class>
		<class>br.com.care.PersonLegal</class>
		<class>br.com.care.PersonPhysical</class>
		<class>br.com.care.Address</class>
		<class>br.com.care.BlackList</class>
		<class>br.com.care.Phone</class>
		<class>br.com.care.Vacancy</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/care" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			
						
			
			
			
			
		</properties>
	</persistence-unit>	
</persistence>